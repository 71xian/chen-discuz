<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoexe.discuz.system.modular.config.mapper.ConfigMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        config_key, config_value, config_tag
    </sql>

    <!-- 根据key查找配置 -->
    <select id="selectByKey" resultType="com.aoexe.discuz.system.modular.config.model.entity.Config">
        select * from config where config_key = #{key}
    </select>
    
    <!-- 修改配置项 -->
    <update id="updateByKey">
        update config set config_value = #{value} where config_key = #{key}
    </update>

</mapper>
